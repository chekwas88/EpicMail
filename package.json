{
  "name": "epicmail",
  "version": "1.0.0",
  "description": "A mail app",
  "main": "app.js",
  "scripts": {
    "start": "node ./dist/app.js",
    "cdtables": "cross-env NODE_ENV=test babel-node ./server/db/dbQuery.js",
    "test": "npm run cdtables && cross-env NODE_ENV=test nyc mocha ./server/test --require babel-register --require babel-polyfill --exit",
    "build": "babel server -d dist",
    "start:dev": "nodemon ./server/app.js --exec babel-node --presets babel-preset-env ",
    "createTables": "node server/db/createTables.js",
    "dropTables": "node server/db/dropTables.js",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chekwas88/EpicMail.git"
  },
  "author": "chekwas88",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/chekwas88/EpicMail/issues"
  },
  "homepage": "https://github.com/chekwas88/EpicMail#readme",
  "dependencies": {
    "bcrypt": "^3.0.4",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "cors": "^2.8.5",
    "coveralls": "^3.0.3",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "jsonwebtoken": "^8.5.0",
    "mocha": "^6.0.0",
    "mocha-lcov-reporter": "^1.3.0",
    "pg": "^7.9.0",
    "swagger-ui-express": "^4.0.2",
    "make-runnable": "^1.3.6"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.15.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0"
  }
}
